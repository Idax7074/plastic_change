    	font-size: var(--Headline2-medium);
	}
	p {
    	font-size: var(--Body-medium);
	}
	.hero_text{
		margin-top: 8rem;
	}
	section {
        padding-inline: 2rem;
        padding-bottom: 6rem;
    }
    .section_1 {
        padding-top: 6rem;
    }
	.section2 {
        padding-block: 6rem;
    }
	img{
		max-width: 20rem;
	}

}

	/*Mobil*/
@media screen and (max-width: 767px){

	.herosection {
		background-color: var(--color-background-hero);
	}
	h1{
    	font-size: var(--Display-small);
	}
	h2{
    	font-size: var(--Headline2-small);
	}
	p {
    	font-size: var(--Body-small);
	}
	.herosection {
		height:40rem;	
	}
	.hero_text{
		margin-top: 4rem;
	}
	.herosection h2 {
		width: 25rem;
		max-width: 25rem;  
	}

	.grid_1-1 {
        grid-template-columns: 1fr;
        gap: 2rem;
    }

	section {
        padding-inline: 1rem;
        padding-bottom: 4rem;
    }

    .section_1 {
        padding-top: 4rem;
    }

    .section2 {
        padding-block: 2rem;
    }

	img{
		max-width: 15rem;
		margin-inline: auto;
	}

	.reverse {
		grid-column: 1;
		grid-row: 1;
	}

	.loesning img {
		grid-column: 1;
		grid-row: 1;
	}
}

</style>
