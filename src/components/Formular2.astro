<style>
    .formular{
        width: 34rem;
height: 42rem;
padding: 2rem;
border-radius: 20px;
border: 1px solid #F3F3F3;
background: var(--color-background-nav, #FFF);
box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
position: absolute;
top: 25rem;
  left: 55rem;
    }
    .cirkel{
        width: var(--spacing-4, 20px);
height: var(--spacing-4, 20px);
